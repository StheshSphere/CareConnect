<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="16dp">

        <!-- Logo Image - Fixed -->
        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="317dp"
            android:layout_height="196dp"
            android:layout_marginTop="64dp"
            android:adjustViewBounds="true"
            android:contentDescription="App Logo"
            android:scaleType="fitCenter"
            android:src="@drawable/careconnect" />

        <!-- Profile Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:background="@drawable/rounded_tabs"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="16dp"
            android:layout_gravity="center_horizontal"
            android:elevation="4dp">

            <!-- Profile Icon -->
            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/profile"
                android:contentDescription="Profile Icon"
                android:layout_marginEnd="16dp"
                app:tint="#90CAF9" />

            <!-- Profile Info -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvProfileName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nkosinathi Khumalo"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:fontFamily="@font/fredoka_medium" />

                <TextView
                    android:id="@+id/tvProfileEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="nkosinathi@gmail.com"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvProfilePhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+27 - - - - - - - - -"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Grid Layout -->
        <androidx.gridlayout.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:alignmentMode="alignMargins"
            app:columnCount="2"
            app:rowCount="2"
            app:useDefaultMargins="true">

            <!-- Donate Button -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="140dp"
                app:layout_rowWeight="1"
                app:layout_columnWeight="1"
                android:background="@drawable/rounded_tabs"
                app:layout_gravity="fill"
                android:layout_margin="8dp"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="12dp">

                <ImageView
                    android:layout_width="72dp"
                    android:layout_height="56dp"
                    android:contentDescription="Donate Icon"
                    android:src="@drawable/donate"
                    app:tint="#FFFFFF" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Donate"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:fontFamily="@font/fredoka_medium"/>
            </LinearLayout>

            <!-- Request Button -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="140dp"
                app:layout_rowWeight="1"
                app:layout_columnWeight="1"
                app:layout_gravity="fill"
                android:layout_margin="8dp"
                android:background="@drawable/rounded_tabs"                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="12dp">

                <ImageView
                    android:layout_width="68dp"
                    android:layout_height="58dp"
                    android:contentDescription="Request Icon"
                    android:src="@drawable/request"
                    app:tint="#FFFFFF" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Request"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:fontFamily="@font/fredoka_medium" />
            </LinearLayout>

            <!-- Matches Button -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="140dp"
                app:layout_rowWeight="1"
                app:layout_columnWeight="1"
                app:layout_gravity="fill"
                android:layout_margin="8dp"
                android:background="@drawable/rounded_tabs"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="12dp">

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="71dp"
                    android:contentDescription="Match Icon"
                    android:src="@drawable/match"
                    app:tint="#FFFFFF" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Matches"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:fontFamily="@font/fredoka_medium"/>
            </LinearLayout>

            <!-- Leaderboard Button -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="140dp"
                app:layout_rowWeight="1"
                app:layout_columnWeight="1"
                app:layout_gravity="fill"
                android:layout_margin="8dp"
                android:background="@drawable/rounded_tabs"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="12dp">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="70dp"
                    android:contentDescription="Leaderboard Icon"
                    android:src="@drawable/ranking"
                    app:tint="#FFFFFF" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Leaderboard"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:fontFamily="@font/fredoka_medium"/>
            </LinearLayout>

        </androidx.gridlayout.widget.GridLayout>
        <!-- Logout Button -->
        <Button
            android:id="@+id/btnLogout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_gravity="center_horizontal"
            android:text="Logout"
            android:textColor="@color/white"
            android:background="@drawable/rounded_outline"
            android:paddingStart="32dp"
            android:paddingEnd="32dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"/>
    </LinearLayout>
</ScrollView>