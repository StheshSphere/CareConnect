<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@drawable/rounded_tabs">

        <!-- History Type Icon -->
        <ImageView
            android:id="@+id/ivHistoryType"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="History Type"
            app:tint="#FFFFFF"
            android:layout_marginEnd="16dp" />

        <!-- History Details -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvHistoryTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Donated Blankets"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:fontFamily="@font/fredoka_medium"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvHistoryDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sep 5, 2023"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvHistoryStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Completed"
                android:textColor="#C8E6C9"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Action Button -->
        <ImageView
            android:id="@+id/btnHistoryAction"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_forward"
            android:contentDescription="View Details"
            app:tint="#FFFFFF" />
    </LinearLayout>

</androidx.cardview.widget.CardView>