<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Theme.CareConnect" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary_blue</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Disable default button styles that cause purple color -->
        <item name="android:buttonStyle">@style/Widget.CareConnect.Button</item>
        <item name="buttonStyle">@style/Widget.CareConnect.Button</item>
    </style>

    <!-- Custom button style to override default purple -->
    <style name="Widget.CareConnect.Button" parent="Widget.AppCompat.Button">
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/primary_blue</item>
    </style>
</resources>